      "@forgerock/libs/fr-callbacks": ["libs/fr-callbacks/src/index.ts"],
      "@forgerock/libs/fr-device": ["libs/fr-device/src/index.ts"],
      "@forgerock/libs/fr-policy": ["libs/fr-policy/src/index.ts"],
      "@forgerock/libs/fr-recovery-codes": ["libs/fr-recovery-codes/src/index.ts"],
      "@forgerock/libs/fr-ui": ["libs/fr-ui/src/index.ts"],
      "@forgerock/libs/fr-user": ["libs/fr-user/src/index.ts"],
      "@forgerock/libs/fr-webauthn": ["libs/fr-webauthn/src/index.ts"],
