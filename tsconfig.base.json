      "@forgerock/libs/step-types": ["libs/step-types/src/index.ts"],
      "@forgerock/libs/token-manager": ["libs/token-manager/src/index.ts"],
      "@forgerock/libs/token-storage": ["libs/token-storage/src/index.ts"],
      "@forgerock/libs/user-manager": ["libs/user-manager/src/index.ts"],
      "@forgerock/libs/util": ["libs/util/src/index.ts"],
      "@forgerock/libs/util-http": ["libs/util-http/src/index.ts"],
      "@forgerock/libs/util-pkce": ["libs/util-pkce/src/index.ts"]
