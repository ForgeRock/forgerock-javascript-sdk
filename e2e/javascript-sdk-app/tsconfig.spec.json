{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "strict": false,
    "composite": true,
    "noImplicitAny": false
  },
  "include": [
    "utilities/*",
    "suites/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx",
    "**/*.test.js",
    "**/*.spec.js",
    "**/*.test.jsx",
    "**/*.spec.jsx",
    "**/*.d.ts"
  ],
  "exclude": ["dist/"]
}
