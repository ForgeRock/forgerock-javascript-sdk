{
  "name": "mock-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "e2e/mock-api/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/e2e/mock-api",
        "main": "e2e/mock-api/src/index.js",
        "tsConfig": "e2e/mock-api/tsconfig.app.json",
        "assets": ["e2e/mock-api/src/assets"],
        "isolatedConfig": true,
        "webpackConfig": "e2e/mock-api/webpack.config.js"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "mock-api:build",
        "host": "api.example.com",
        "port": 9443
      },
      "configurations": {
        "development": {
          "buildTarget": "mock-api:build:development",
          "watch": true
        },
        "production": {
          "buildTarget": "mock-api:build:production"
        }
      }
    },
    "deploy": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "commands": [
          "nx build mock-api --prod",
          "docker build -f ./e2e/mock-api/Dockerfile . -t mock-api"
        ],
        "parallel": false
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["e2e/mock-api/**/*.ts"],
        "fix": true,
        "ignorePath": ".gitignore"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/e2e/mock-api"],
      "options": {
        "jestConfig": "e2e/mock-api/jest.config.ts"
      }
    }
  },
  "tags": ["scope:e2e"]
}
