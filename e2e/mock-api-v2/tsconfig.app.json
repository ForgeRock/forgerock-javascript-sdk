{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "Node16",
    "target": "ESNext",
    "exactOptionalPropertyTypes": true,
    "strictNullChecks": true,
    "noErrorTruncation": true
  },
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": ["src/**/*.ts"]
}
