{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "composite": true,
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "module": "ESNext",
    "types": ["vite/client"],
    "moduleDetection": "force"
  },
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": ["src/**/*.ts"]
}
