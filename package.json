{
  "name": "@forgerock/javascript-sdk",
  "description": "ForgeRock JavaScript SDK",
  "engines": {
    "node": "^16 || ^18",
    "npm": ">= 7.0.0"
  },
  "private": true,
  "scripts": {
    "build": "nx affected --target=build",
    "build:reactjs-todo": "nx run reactjs-todo:build",
    "build:angular-todo": "nx run angular-todo:build",
    "changeset": "changeset",
    "clean": "shx rm -rf ./{coverage,bundles,dist,docs,lib,lib-esm,node_modules,tests,tmp,todos,users}/ ./samples/*/node_modules/ ./samples/_static/js/*/ ./samples/todo-api/{todos,users} ./packages/*/{bundles,lib,lib-esm}/ && git clean -fX -e \"!.env\"",
    "commit": "git cz",
    "docs": "nx affected --target=typedoc",
    "format:staged": "pretty-quick --staged",
    "lint": "nx affected --target=lint",
    "nx": "nx",
    "prepare": "husky install",
    "release": "changeset publish",
    "release:beta": "changeset publish --tag beta --no-git-tag",
    "start:e2e": "nx run-many --target=serve --projects=autoscript-apps,mock-api --configuration=development",
    "start:embedded-login": "nx serve embedded-login",
    "start:central-login": "nx serve central-login",
    "start:reactjs-todo": "nx run-many --target=serve --projects=reactjs-todo,todo-api",
    "start:angular-todo": "nx run angular-todo:config && nx run-many --target=serve --projects=angular-todo,todo-api",
    "start:server": "nx run mock-api:serve",
    "start:server:live": "NODE_ENV=LIVE nx run mock-api:serve:live",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:e2e": "nx affected:e2e",
    "test:e2e:live": "nx run autoscript-suites:e2e --configuration=live",
    "test:integration": "nx affected --target=test --configuration=integration",
    "test:unit": "nx affected --target=test",
    "version": "changeset version",
    "version:beta": "changeset version",
    "watch": "nx run autoscript-apps:build:development"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ForgeRock/forgerock-javascript-sdk.git"
  },
  "author": "ForgeRock",
  "bugs": {
    "url": "https://github.com/ForgeRock/forgerock-javascript-sdk/issues"
  },
  "homepage": "https://github.com/ForgeRock/forgerock-javascript-sdk#readme",
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.1",
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@commitlint/config-nx-scopes": "^17.4.2",
    "@commitlint/prompt": "^17.4.2",
    "@enio.ai/typedoc": "^1.0.8",
    "@nx-extend/e2e-runner": "^2.3.2",
    "@nx-extend/playwright": "^1.2.1",
    "@nx/angular": "16.3.2",
    "@nx/devkit": "16.3.2",
    "@nx/esbuild": "16.3.2",
    "@nx/eslint-plugin": "16.3.2",
    "@nx/express": "16.3.2",
    "@nx/jest": "16.3.2",
    "@nx/js": "16.3.2",
    "@nx/linter": "16.3.2",
    "@nx/node": "16.3.2",
    "@nx/react": "16.3.2",
    "@nx/rollup": "16.3.2",
    "@nx/web": "16.3.2",
    "@nx/workspace": "16.3.2",
    "@types/estree": "^1.0.1",
    "@types/express": "4.17.17",
    "@types/jest": "29.5.1",
    "@types/jest-dev-server": "^5.0.0",
    "@types/node": "~20.1.3",
    "@typescript-eslint/eslint-plugin": "5.59.5",
    "@typescript-eslint/parser": "5.59.5",
    "@typescript-eslint/typescript-estree": "5.59.5",
    "babel-jest": "29.4.3",
    "conventional-changelog-conventionalcommits": "^4.6.3",
    "cz-conventional-changelog": "^3.3.0",
    "cz-git": "^1.6.1",
    "eslint": "8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "^8.0.3",
    "jest": "29.5.0",
    "jest-canvas-mock": "^2.5.0",
    "jest-environment-jsdom": "29.5.0",
    "jest-environment-node": "29.5.0",
    "jest-junit": "^16.0.0",
    "jest-preset-angular": "^13.1.0",
    "lint-staged": "^13.2.2",
    "nx": "16.3.2",
    "nx-cloud": "16.0.5",
    "prettier": "2.7.1",
    "pretty-quick": "^3.1.2",
    "shx": "^0.3.4",
    "ts-jest": "29.1.0",
    "ts-loader": "^9.4.2",
    "ts-node": "10.9.1",
    "tslib": "^2.5.0",
    "typedoc": "^0.23.26",
    "typedoc-plugin-rename-defaults": "^0.6.5",
    "typedoc-theme-hierarchy": "^3.2.0",
    "typescript": "5.0.4",
    "webpack": "^5.64.1",
    "webpack-cli": "^4.7.2"
  },
  "workspaces": [
    "e2e/*",
    "packages/*",
    "samples/*",
    "lib/*"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
