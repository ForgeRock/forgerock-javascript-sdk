{
  "name": "@forgerock/javascript-sdk",
  "description": "ForgeRock JavaScript SDK",
  "packageManager": "pnpm@9.6.0",
  "engines": { "node": "^20 || ^18", "pnpm": ">= 9.5.0" },
  "private": true,
  "scripts": {
    "build": "nx affected --target=build",
    "clean": "pnpm -r clean && rm -rf ./dist ./node_modules/",
    "commit": "git cz",
    "docs": "nx affected --target=typedoc",
    "e2e": "nx affected:e2e",
    "format:staged": "pretty-quick --staged",
    "lint": "nx affected --target=lint",
    "nx": "nx",
    "prepare": "husky install",
    "publish:local": "node ./tools/release/local.mjs",
    "publish:dev": "node ./tools/release/dev.mjs",
    "release-packages": "pnpm build && changeset publish",
    "start:token-vault": "nx run-many --target=serve --projects=token-vault-app,token-vault-proxy,mock-api",
    "test": "nx affected:test",
    "verdaccio": "nx local-registry",
    "commitlint": "commitlint --edit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ForgeRock/forgerock-javascript-sdk.git"
  },
  "author": "ForgeRock",
  "bugs": {
    "url": "https://github.com/ForgeRock/forgerock-javascript-sdk/issues"
  },
  "homepage": "https://github.com/ForgeRock/forgerock-javascript-sdk#readme",
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.7",
    "@commitlint/cli": "^19.1.0",
    "@commitlint/config-conventional": "^19.1.0",
    "@commitlint/prompt": "^19.1.0",
    "@nx/devkit": "19.5.7",
    "@nx/esbuild": "19.5.7",
    "@nx/eslint": "19.5.7",
    "@nx/eslint-plugin": "19.5.7",
    "@nx/express": "19.5.7",
    "@nx/js": "19.5.7",
    "@nx/node": "19.5.7",
    "@nx/playwright": "19.5.7",
    "@nx/vite": "19.5.7",
    "@nx/web": "19.5.7",
    "@nx/workspace": "19.5.7",
    "@playwright/test": "catalog:playwright",
    "@swc-node/register": "1.9.2",
    "@swc/core": "1.5.7",
    "@swc/helpers": "0.5.12",
    "@types/estree": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "7.16.1",
    "@typescript-eslint/parser": "7.16.1",
    "@typescript-eslint/typescript-estree": "5.59.5",
    "@vitest/coverage-v8": "^1.4.0",
    "@vitest/ui": "^1.4.0",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "cz-git": "^1.6.1",
    "esbuild": "^0.19.2",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-playwright": "^1.5.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "jsdom": "22.1.0",
    "jsonc-eslint-parser": "^2.1.0",
    "lint-staged": "^13.2.2",
    "npm-cli-login": "^1.0.0",
    "nx": "19.5.7",
    "playwright": "catalog:playwright",
    "prettier": "^3.2.5",
    "pretty-quick": "^4.0.0",
    "sass": "^1.71.1",
    "tslib": "^2.5.0",
    "typedoc": "^0.26.5",
    "typedoc-plugin-rename-defaults": "^0.7.1",
    "typedoc-theme-hierarchy": "^5.0.3",
    "typescript": "5.5.3",
    "verdaccio": "^5.29.2",
    "vite": "^5.2.6",
    "vite-plugin-eslint": "^1.8.1",
    "vitest": "^1.4.0"
  },
  "config": {
    "commitizen": { "path": "./node_modules/cz-conventional-changelog" }
  },
  "nx": { "includedScripts": [] }
}
