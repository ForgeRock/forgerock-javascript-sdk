{
  "name": "@forgerock/javascript-sdk",
  "description": "ForgeRock JavaScript SDK",
  "engines": {
    "node": "^20 || ^18",
    "npm": ">= 7.0.0"
  },
  "private": true,
  "scripts": {
    "build": "nx affected --target=build",
    "clean": "shx rm -rf ./{coverage,bundles,dist,docs,lib,lib-esm,node_modules,tests,tmp,todos,users}/ ./samples/*/node_modules/ ./samples/_static/js/*/ ./samples/todo-api/{todos,users} ./packages/*/{bundles,lib,lib-esm}/ && git clean -fX -e \"!.env*,nx-cloud.env\"",
    "commit": "git cz",
    "docs": "nx affected --target=typedoc",
    "e2e": "nx affected:e2e",
    "format:staged": "pretty-quick --staged",
    "lint": "nx affected --target=lint",
    "nx": "nx",
    "prepare": "husky install",
    "publish:local": "node ./tools/release/local.mjs",
    "publish:dev": "node ./tools/release/dev.mjs",
    "start:token-vault": "nx run-many --target=serve --projects=token-vault-app,token-vault-proxy,mock-api",
    "test": "nx affected:test",
    "verdaccio": "nx local-registry",
    "commitlint": "commitlint --edit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ForgeRock/forgerock-javascript-sdk.git"
  },
  "author": "ForgeRock",
  "bugs": {
    "url": "https://github.com/ForgeRock/forgerock-javascript-sdk/issues"
  },
  "homepage": "https://github.com/ForgeRock/forgerock-javascript-sdk#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.1.0",
    "@commitlint/config-conventional": "^19.1.0",
    "@commitlint/prompt": "^19.1.0",
    "@nrwl/devkit": "18.2.4",
    "@nx/devkit": "18.2.4",
    "@nx/eslint": "18.2.4",
    "@nx/eslint-plugin": "18.2.4",
    "@nx/express": "18.2.4",
    "@nx/js": "18.2.4",
    "@nx/node": "18.2.4",
    "@nx/playwright": "18.2.4",
    "@nx/vite": "18.2.4",
    "@nx/workspace": "18.2.4",
    "@playwright/test": "^1.43.0",
    "@swc-node/register": "1.8.0",
    "@swc/core": "1.3.107",
    "@swc/helpers": "0.5.8",
    "@types/estree": "^1.0.1",
    "@types/express": "4.17.17",
    "@types/node": "18.19.26",
    "@typescript-eslint/eslint-plugin": "7.4.0",
    "@typescript-eslint/parser": "7.4.0",
    "@typescript-eslint/typescript-estree": "5.59.5",
    "@vitest/coverage-v8": "^1.4.0",
    "@vitest/ui": "^1.4.0",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cz-conventional-changelog": "^3.3.0",
    "cz-git": "^1.6.1",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-playwright": "^1.5.1",
    "eslint-plugin-prettier": "^5.1.3",
    "express": "^4.18.3",
    "husky": "^8.0.3",
    "jsdom": "22.1.0",
    "jsonc-eslint-parser": "^2.1.0",
    "lint-staged": "^13.2.2",
    "npm-cli-login": "^1.0.0",
    "nx": "18.2.4",
    "nx-cloud": "18.0.0",
    "playwright": "^1.43.0",
    "prettier": "^3.2.5",
    "pretty-quick": "^4.0.0",
    "sass": "^1.71.1",
    "shx": "^0.3.4",
    "superagent": "^8.1.2",
    "tslib": "^2.5.0",
    "typedoc": "^0.25.12",
    "typedoc-plugin-rename-defaults": "^0.7.0",
    "typedoc-theme-hierarchy": "^4.1.2",
    "typescript": "5.4.3",
    "uuid": "^9.0.1",
    "verdaccio": "^5.29.2",
    "vite": "^5.2.6",
    "vite-plugin-dts": "^3.8.3",
    "vite-plugin-eslint": "^1.8.1",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.4.0",
    "vitest-canvas-mock": "^0.3.3"
  },
  "workspaces": ["e2e/*", "packages/*"],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nx": {
    "includedScripts": []
  }
}
