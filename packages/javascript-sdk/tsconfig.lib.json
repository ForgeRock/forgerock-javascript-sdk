{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/packages/javascript-sdk",
    "declaration": true,
    "lib": ["ES2015", "dom"],
    "moduleResolution": "Node",
    "composite": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": false,
    "module": "ES2015",
    "target": "ES2015"
  },
  "include": ["**/*.ts"],
  "exclude": [
    "tests/",
    "**/*.spec.ts",
    "**/*.test.ts",
    "lib-esm",
    "lib",
    "bundles",
    "dist/",
    "jest*"
  ]
}
