{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/packages/javascript-sdk/esm",
    "declaration": true,
    "lib": ["DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": false,
    "module": "ES2020",
    "target": "ES2020"
  },
  "include": ["**/*.ts"],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.mock.ts",
    "tests/*",
    "bundles",
    "jest.env.config.ts",
    "jest.config.ts",
    "**/*.mock.data.ts"
  ]
}
