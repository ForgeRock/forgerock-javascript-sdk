{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/packages/javascript-sdk",
    "declaration": true,
    "lib": ["dom"],
    "moduleResolution": "node",
    "composite": true,
    "sourceMap": true,
    "skipLibCheck": false,
    "strict": false,
    "module": "ES2020",
    "target": "ES2020"
  },
  "include": ["**/*.ts"],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.mock.ts",
    "tests/*",
    "bundles",
    "jest.env.config.ts",
    "jest.config.ts",
    "**/*.mock.data.ts"
  ]
}
