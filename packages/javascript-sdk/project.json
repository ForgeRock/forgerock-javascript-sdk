{
  "name": "javascript-sdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/javascript-sdk/src",
  "projectType": "library",
  "tags": ["scope:sdk", "scope:package"],
  "targets": {
    "docs": {
      "command": "npx typedoc --options packages/javascript-sdk/typedoc.json"
    },
    "build": {
      "dependsOn": ["packagejson"],
      "command": "node ./tools/release/sdk-exports.mjs"
    },
    "packagejson": {
      "dependsOn": ["package", "readme"],
      "command": "cp packages/javascript-sdk/package.json packages/javascript-sdk/LICENSE dist/packages/javascript-sdk"
    },
    "readme": {
      "dependsOn": ["package"],
      "command": "cp packages/javascript-sdk/README.md dist/packages/javascript-sdk"
    },
    "package": {
      "dependsOn": ["^build"],
      "inputs": [
        "default",
        "^default",
        {
          "externalDependencies": ["vite"]
        }
      ],
      "outputs": ["{projectRoot}/{options.outDir}", "{projectRoot}/dist"],
      "options": {
        "outDir": "../../dist/packages/javascript-sdk"
      }
    },
    "lint": {
      "options": {
        "fix": true,
        "ignore-path": ".eslintignore",
        "args": ["**/*.ts"]
      }
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": [
        "default",
        "^default",
        {
          "externalDependencies": ["vitest"]
        }
      ],
      "options": {
        "testPathPattern": ["packages/javascript-sdk/src"]
      },
      "configurations": {
        "watch": {
          "watch": true,
          "mode": "ui"
        }
      }
    }
  }
}
