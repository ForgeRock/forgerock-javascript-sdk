{
  "name": "javascript-sdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/javascript-sdk/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "options": {
        "compiler": "tsc",
        "entryFile": "packages/javascript-sdk/src/index.ts",
        "outputPath": "dist/packages/javascript-sdk",
        "assets": [
          {
            "input": "packages/javascript-sdk",
            "glob": "README.md",
            "output": "/"
          }
        ],
        "format": ["esm", "cjs"],
        "deleteOutputPath": true,
        "generateExportsField": false,
        "main": "packages/javascript-sdk/src/index.ts",
        "rollupConfig": "packages/javascript-sdk/rollup.config.js",
        "updateBuildableProjectDepsInPackageJson": false,
        "project": "packages/javascript-sdk/package.json",
        "tsConfig": "packages/javascript-sdk/tsconfig.lib.json",
        "cwd": "packages/javascript-sdk",
        "parallel": true
      },
      "configurations": {
        "production": {}
      },
      "outputs": ["{options.outputPath}"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/javascript-sdk/**/*.ts"],
        "fix": true,
        "ignorePath": ".gitignore"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["coverage/packages/javascript-sdk"],
      "options": {
        "jestConfig": "packages/javascript-sdk/jest.config.ts",
        "testPathPattern": ["packages/javascript-sdk/src"],
        "codeCoverage": true,
        "passWithNoTests": true
      },
      "configurations": {
        "unit": {},
        "integration": {
          "testPathPattern": ["packages/javascript-sdk/tests/integration"],
          "passWithNoTests": true,
          "codeCoverage": true
        }
      }
    },
    "typedoc": {
      "executor": "@enio.ai/typedoc:typedoc",
      "outputs": ["docs/packages/javascript-sdk"],
      "options": {
        "options": "typedoc.json"
      },
      "configurations": {}
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "baseBranch": "master",
        "skipRootChangelog": true,
        "tagPrefix": "${projectName}-v",
        "commitMessageFormat": "chore(${projectName}): release version ${version} [skip ci]",
        "push": true,
        "syncVersions": false,
        "postTargets": [
          "javascript-sdk:updatePackageJson",
          "javascript-sdk:npm",
          "javascript-sdk:github"
        ],
        "skipCommitTypes": ["ci", "docs", "style", "refactor", ""]
      },
      "configurations": {
        "beta": {
          "preset": "conventional",
          "baseBranch": "develop",
          "preid": "beta",
          "tagPrefix": "${projectName}-v",
          "push": true,
          "skipRootChangelog": true,
          "releaseAs": "prerelease",
          "skipCommitTypes": ["ci", "docs", "style", "refactor", ""],
          "postTargets": [
            "javascript-sdk:updatePackageJson",
            "javascript-sdk:npm:beta",
            "javascript-sdk:github:beta"
          ]
        }
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      },
      "configurations": {
        "beta": {
          "prerelease": true
        }
      }
    },
    "npm": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public",
        "noBuild": true
      },
      "configurations": {
        "beta": {
          "tag": "beta",
          "noBuild": true
        }
      }
    },
    "updatePackageJson": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "node ./scripts/update-package-json-sdk.js"
          }
        ]
      }
    }
  },
  "tags": ["scope:sdk"]
}
