{
  "name": "javascript-sdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/javascript-sdk/src",
  "projectType": "library",
  "tags": ["scope:sdk", "scope:package"],
  "targets": {
    "docs": {
      "command": "npx typedoc --options packages/javascript-sdk/typedoc.json"
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "default",
        "^default",
        {
          "externalDependencies": ["vite"]
        }
      ],
      "outputs": ["{options.outDir}"],
      "options": {
        "outDir": "packages/javascript-sdk/dist"
      }
    },
    "lint": {
      "options": {
        "fix": true,
        "ignore-path": ".eslintignore",
        "args": ["./**/*.ts"]
      }
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": [
        "default",
        "^default",
        {
          "externalDependencies": ["vitest"]
        }
      ],
      "options": {
        "testPathPattern": ["packages/javascript-sdk/src"],
        "coverage": true
      },
      "configurations": {
        "watch": {
          "watch": true,
          "mode": "ui"
        }
      }
    }
  }
}
