{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/packages/javascript-sdk",
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "strict": false,
    "noImplicitAny": false,
    "allowJs": true
  },
  "include": [
    "tests/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx",
    "**/*.test.js",
    "**/*.spec.js",
    "**/*.test.jsx",
    "**/*.spec.jsx",
    "**/*.d.ts",
    "./jest.env.config.ts",
    "jest.config.ts",
    "jest.*.config.ts"
  ],
  "exclude": ["lib", "lib-esm", "dist/"]
}
