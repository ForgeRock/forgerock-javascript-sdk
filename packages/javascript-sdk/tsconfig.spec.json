{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "target": "ES2020",
    "composite": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "es2023"]
  },
  "include": [
    "package.json",
    "vite.config.ts",
    "vitest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "src/**/*.d.ts",
    "src/**/*.mock.*",
    "tests/**/*.test.ts",
    "tests/**/*.spec.ts",
    "tests/**/*.mock*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
