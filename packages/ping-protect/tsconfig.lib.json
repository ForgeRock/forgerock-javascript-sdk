{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true,
    "target": "ES2020",
    "module": "ES2020",
    "verbatimModuleSyntax": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": true,
    "sourceMap": true,
    "declarationMap": true
  },
  "include": ["src/**/*.ts", "src/lib/ping-signals-sdk.js"],
  "files": [],
  "exclude": [
    "vitest.config.ts",
    "vitest.setup.ts",
    "tsconfig*.json",
    "project.json",
    ".eslintrc",
    "src/**/*.test.ts"
  ]
}
