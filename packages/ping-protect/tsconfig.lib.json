{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true,
    "target": "ES2020",
    "module": "node16",
    "verbatimModuleSyntax": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true
  },
  "include": ["src/**/*.ts", "src/lib/ping-signals-sdk.js"],
  "exclude": [
    "vite.config.ts",
    "vitest.setup.ts",
    ".eslintrc.json",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
