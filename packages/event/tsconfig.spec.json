{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "types": ["jest", "node"],
    "module": "ES2015",
    "target": "ES5",
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitReturns": false
  },
  "include": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx",
    "**/*.test.js",
    "**/*.spec.js",
    "**/*.test.jsx",
    "**/*.spec.jsx",
    "**/*.d.ts"
  ],
  "exclude": ["lib", "lib-esm", "dist"]
}
