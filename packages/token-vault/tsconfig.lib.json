{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationMap": true,
    "noImplicitOverride": false,
    "noImplicitAny": false,
    "noPropertyAccessFromIndexSignature": false,
    "skipLibCheck": true,
    "lib": ["DOM", "WebWorker", "Webworker.Iterable", "ES2020"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["vite.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
