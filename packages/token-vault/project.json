{
  "name": "token-vault",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/token-vault/src",
  "projectType": "library",
  "tags": ["scope:package"],
  "targets": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "default",
        "^default",
        {
          "externalDependencies": ["vite"]
        }
      ],
      "outputs": ["{options.outDir}"],
      "options": {
        "outDir": "dist"
      }
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": [
        "default",
        "^default",
        {
          "externalDependencies": ["vitest"]
        }
      ],
      "options": {
        "config": "./vite.config.ts",
        "coverage": true
      }
    },
    "lint": {
      "options": {
        "args": ["./**/*.ts"],
        "fix": true,
        "ignore-path": ".eslintignore"
      }
    }
  }
}
