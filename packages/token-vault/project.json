{
  "name": "token-vault",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/token-vault/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/token-vault",
        "main": "packages/token-vault/src/index.ts",
        "tsConfig": "packages/token-vault/tsconfig.lib.json",
        "assets": ["shared/types/*.md"],
        "transformers": [
          {
            "name": "typescript-transform-paths/nx-transformer"
          },
          {
            "name": "typescript-transform-paths/nx-transformer",
            "options": { "afterDeclarations": true }
          }
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/packages/token-vault"],
      "options": {
        "jestConfig": "packages/token-vault/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/token-vault/**/*.ts"]
      }
    }
  },
  "tags": ["scope:package"]
}
