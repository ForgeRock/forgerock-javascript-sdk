{
  "name": "token-vault",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/token-vault/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/token-vault",
        "main": "packages/token-vault/src/index.ts",
        "tsConfig": "packages/token-vault/tsconfig.lib.json",
        "assets": ["packages/token-vault/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs token-vault {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/token-vault/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["coverage/packages/token-vault"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/token-vault"
      }
    }
  },
  "tags": ["scope:package"]
}
